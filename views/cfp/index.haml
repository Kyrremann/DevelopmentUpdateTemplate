!!!
%html
  %head
    %title
      = t.title
    = haml :"templates/header_imports"
  %body
    #layout
      = haml :"cfp/nav"
      #main
        %h3
          = t.cfp.title
        %p
          = t.cfp.content
        %br
        - @errors.each do | e |
          = e
          %br
        %form.pure-form.pure-form-stacked{:method => "post", :role => "form"}
          %fieldset
            .pure-control-group
              %label{:for => "title"}
                = t.cfp.form.title
              %input#tittel{:name => "suggestion[title]", :placeholder => "Title", :type => "text", :style => "width: 100%;"}

            .pure-control-group
              %label{:for => "description"}
                = t.cfp.form.description
              %textarea#beskrivelse{:name => "suggestion[description]", :placeholder => "Description", :style => "width: 100%;", :rows => "4"}

            .pure-control-group
              %label{:for => "format"}
                = t.cfp.form.format
              %select#format{:name => "suggestion[format]", :style => "width: 100%;"}
                %option{:value => "45 minute talk"} 45 minute talk
                %option{:value => "10 lightning talk"} 10 lightning talk
                %option{:value => "workshop"} Workshop
                %option{:value => "other"} Other

            .pure-control-group
              %label{:for => "track"}
                = t.cfp.form.track
              %select#selectbasic{:name => "suggestion[track]", :style => "width: 100%;"}
                %option{:value => "all"} For All
                %option{:value => "java"} Java
                %option{:value => "net"} .NET
                %option{:value => "ux"} UX
                %option{:value => "other"} Other

            .pure-control-group
              %label{:for => "speaker"}
                = t.cfp.form.speaker
              %input#tittel{:name => "suggestion[speaker]", :placeholder => "Speaker", :type => "text", :style => "width: 100%;"}

            .pure-control-group
              %button#submit.pure-button.pure-button-primary{:name => "submit"} Submit
              %button#cancel.pure-button{:name => "clear", :type => "reset"} clear

            .pure-control-group
              %br

!!!
%html
  %head
    %title
      = t.title
    = haml :'header_imports'
    -green = '#821CB4'
    -purple = '#B3DB11'
  %body
    #layout
      = haml :"track/nav"
      #main
        .content
          = t.main.content
          %br
          - @tracks.each do | track |
            %a{:href => "/track/#{track}", :class => "no-underline"}
              %div{:class => "col-lg-12 big-btn", :style => "background: #{green}; color: #{purple};"}
                = track
          %a{:href => "/track/now", :class => "no-underline"}
            %div{:class => "col-lg-12 big-btn", :style => "background: #{green}; color: #{purple};"}
              Just nu
